<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer"
                    x:Class="Syncfusion.Maui.Toolkit.Shimmer.SfShimmerStyles">

    <Style TargetType="shimmer:SfShimmer">
        <Setter Property="Fill" Value="{DynamicResource SfShimmerFillColor}"/>
        <Setter Property="WaveColor" Value="{DynamicResource SfShimmerWaveColor}"/>
    </Style>
    
</ResourceDictionary>