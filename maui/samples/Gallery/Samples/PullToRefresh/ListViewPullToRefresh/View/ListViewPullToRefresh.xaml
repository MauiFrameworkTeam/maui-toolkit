<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      x:Class="Syncfusion.Maui.ControlsGallery.PullToRefresh.SfPullToRefresh.ListViewPullToRefresh"
                      xmlns:localCore="clr-namespace:Syncfusion.Maui.ControlsGallery;assembly=Syncfusion.Maui.ControlsGallery"
                      xmlns:local="clr-namespace:Syncfusion.Maui.ControlsGallery.PullToRefresh"
                      xmlns:imageExtension="clr-namespace:Syncfusion.Maui.ControlsGallery.Converters;assembly=Syncfusion.Maui.ControlsGallery"
                      xmlns:pulltoRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit">
    <localCore:SampleView.Resources>
        <local:DatetimeToStringConverter x:Key="dateTimeConverter" />
        <local:FontAttributeConverter x:Key="fontAttributeConverter" />
        <local:GroupHeaderTextConverter x:Key="groupHeaderTextConverter" />
        <imageExtension:ImageSourceConverter x:Key="imageconverter" />
    </localCore:SampleView.Resources>

    <localCore:SampleView.Behaviors>
        <local:ListViewPullToRefreshBehavior />
    </localCore:SampleView.Behaviors>

    <localCore:SampleView.Content>
        <Grid>
            <pulltoRefresh:SfPullToRefresh x:Name="pullToRefresh"
                                           RefreshViewHeight="50"
                                           RefreshViewThreshold="30"
                                           PullingThreshold="150"
                                           RefreshViewWidth="50"
                                           TransitionMode="SlideOnTop"
                                           IsRefreshing="False">
                <pulltoRefresh:SfPullToRefresh.PullableContent>
                    <Grid x:Name="mainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Text="Inbox"
                               FontSize="18"
                               FontFamily="Roboto-Medium"
                               Margin="16,0,0,0"
                               VerticalOptions="Center" />
                        <ListView Grid.Row="1"
                                  RowHeight="100"
                                             x:Name="listView"
                                             ItemsSource="{Binding InboxInfos}">
                            
                            <ListView.GroupHeaderTemplate>
                                <DataTemplate x:Name="GroupHeaderTemplate">
                                    <ViewCell>
                                        <ViewCell.View>
                                            <Grid HeightRequest="16"
                                                  Margin="16, 0, 16, 0">
                                                <Label Text="{Binding Key, Converter={StaticResource groupHeaderTextConverter}}"
                                                       VerticalOptions="CenterAndExpand"
                                                       FontFamily="Roboto-Regular"
                                                       FontSize="12"
                                                       Grid.Row="1" />
                                            </Grid>
                                        </ViewCell.View>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.GroupHeaderTemplate>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid ColumnSpacing="12"
                                          Margin="16, 14, 16, 14">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="24" />
                                                <RowDefinition Height="2" />
                                                <RowDefinition Height="24" />
                                                <RowDefinition Height="4" />
                                                <RowDefinition Height="20" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="42" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0"
                                              Grid.Column="0"
                                              Grid.RowSpan="3"
                                              Margin="0, 0, 0, 0"
                                              HorizontalOptions="Center"
                                              VerticalOptions="StartAndExpand">
                                                <Border StrokeShape="RoundRectangle 25,25,25,25"
                                                   HeightRequest="42"
                                                   WidthRequest="42" BackgroundColor="{Binding AvatarBackgroundColor}" HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Label Text="{Binding ProfileName}"
                                                   TextColor="{Binding AvatarTextColor}"
                                                   FontSize="14"
                                                   HorizontalTextAlignment="Center"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   VerticalTextAlignment="Center"
                                                   FontFamily="Roboto-Regular"
                                                   CharacterSpacing="0.25" />
                                                </Border>
                                            </Grid>

                                            <Label Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontFamily="Roboto-Medium"
                                               FontSize="14"
                                               Margin="0, 2, 0, 0"
                                               LineBreakMode="TailTruncation"
                                               CharacterSpacing="0.25" />

                                            <Label Grid.Row="2"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Subject}"
                                               Margin="0, 0, 58, 0"
                                               FontFamily="Roboto-Medium"
                                               FontSize="14"
                                               LineBreakMode="TailTruncation"
                                               CharacterSpacing="0.25" />

                                            <Label Grid.Row="4"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Description}"
                                               FontFamily="Roboto-Regular"
                                               FontSize="13"
                                               Margin="0, 0, 26, 0"
                                               LineBreakMode="TailTruncation" />

                                            <Label Grid.Row="0"
                                               Grid.Column="2"
                                               x:Name="date"
                                               Text="{Binding Date, Converter={StaticResource dateTimeConverter}}"
                                               
                                               FontFamily="Roboto-Regular"
                                               HorizontalOptions="End"
                                               HorizontalTextAlignment="End"
                                               FontSize="11" />

                                            <Label Grid.Row="2"
                                               Grid.Column="2"
                                               Rotation="45"
                                               Text="&#xe771;"
                                               FontSize="16"
                                               FontFamily="MauiSampleFontIcon"
                                               IsVisible="{Binding IsAttached}"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center">
                                            </Label>

                                            <Label Grid.Row="2"
                                               Grid.Column="2"
                                               Text="&#xe796;"
                                               FontSize="16"
                                               FontFamily="MauiSampleFontIcon"
                                               IsVisible="{Binding IsImportant}"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center">
                                            </Label>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>
                    </Grid>
                </pulltoRefresh:SfPullToRefresh.PullableContent>
            </pulltoRefresh:SfPullToRefresh>
        </Grid>
    </localCore:SampleView.Content>
    <localCore:SampleView.OptionView>
        <ContentView>
            <Grid Padding="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>

                <Label FontSize="14"
                       HorizontalOptions="Start"
                       Text="Transition Type"
                       VerticalOptions="Center" />
                
                <Picker  x:Name="comboBox"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     HorizontalOptions="StartAndExpand">

                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>SlideOnTop</x:String>
                            <x:String>Push</x:String>
                        </x:Array>
                    </Picker.ItemsSource>

                    <Picker.SelectedItem>
                        <x:String>SlideOnTop</x:String>
                    </Picker.SelectedItem>
                </Picker>
            </Grid>
        </ContentView>
    </localCore:SampleView.OptionView>

</localCore:SampleView>