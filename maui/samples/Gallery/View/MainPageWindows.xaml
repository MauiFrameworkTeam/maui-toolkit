                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
                <Grid VerticalOptions="End" HeightRequest="5" Margin="3,0" >
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#33000000"
                          Offset="0.1" />
                            <GradientStop Color="Transparent"
                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
                <ScrollView x:Name="searchScrollView" Orientation="Vertical" HeightRequest="300" WidthRequest="605" Margin="0,0,0,5" MaximumHeightRequest="296" VerticalOptions="Fill" VerticalScrollBarVisibility="Always" >
                    <VerticalStackLayout x:Name="searchedResultList" 
                                         Margin="5,0"
                                         BindableLayout.ItemsSource="{Binding SearchList , Mode=TwoWay}"
                                         Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                         Padding="10">
                        <BindableLayout.ItemTemplate >
                            <DataTemplate>
                                <customView:SfEffectsViewAdv Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
                                    <customView:SfEffectsViewAdv.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                    </customView:SfEffectsViewAdv.GestureRecognizers>
                                    <HorizontalStackLayout Padding="5" Spacing="5" HeightRequest="40">
                                        <Image  WidthRequest="25" Margin="5,0" HeightRequest="25"  Source="{Binding Control.Image, Converter={StaticResource imageSourceConverter}}"/>
                                        <Label Grid.Row="0" Text="{Binding Control.Title}"  TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="14" VerticalOptions="Center" VerticalTextAlignment="Center"   />
                                        <Label Grid.Row="0" Text="-" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="14" VerticalOptions="Center" VerticalTextAlignment="Center"   />
                                        <Label LineBreakMode="TailTruncation" Grid.Row="0" Text="{Binding Sample.Title}" TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1Dark}}" FontSize="14" VerticalOptions="Center" VerticalTextAlignment="Center"  />
                                    </HorizontalStackLayout>
                                </customView:SfEffectsViewAdv>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
